<CascadingValue Value="@this">
    <div class="container">
        <div class="body">
            <div class="row">
                <div>@Localizer["Title"]</div>
                
                <div>
                    
                    <div class="css-recipe">
                        <CraftingItem Index="0"/>
                        <CraftingItem Index="1"/>
                        <CraftingItem Index="2"/>
                        <CraftingItem Index="3"/>
                        <CraftingItem Index="4"/>
                        <CraftingItem Index="5"/>
                        <CraftingItem Index="6"/>
                        <CraftingItem Index="7"/>
                        <CraftingItem Index="8"/>
                    </div>
                </div>
                
                <div>@Localizer["Result"]</div>
                <div class="row">
                    <div class="col-2">
                        <CraftingItem Item="RecipeResult" />
                    </div>

                    <div class="col-2">
                        <DeleteItem />
                    </div>

                </div>
            </div>
            <div >
                
                <div>@Localizer["Inventory"]</div>
                <div class="col-12">
                    <div class="css-grid">
                        
                        @foreach (var item in Items)
                        {
                            <CraftingItem Item="item" NoDrop="true"/>
                        }
                        @for (int i = 0; i < 64 - Items.Count; i++)
                        {
                            <CraftingItem/>
                        }
                    </div>
                </div>

            </div>


            <div class="col-12">
                <div>Actions</div>
                <div class="actions" id="actions">

                </div>
            </div>
        </div>
    </div>
</CascadingValue>